<div class="container">
  <h1>All our flats</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-xs-12 col-sm-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('<%= flat.image %>')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="fas fa-users"></i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <span>
              <%= link_to "More info", flat_path(flat.id), class: 'btn btn-success'%>
              <%= link_to "Edit", edit_flat_path(flat.id), class: 'btn btn-success'%>
              <%= link_to "Remove", flat_path(flat.id), method: 'DELETE', data: { confirm: "Are you sure you want to delete #{flat.name}?" }, class: 'btn btn-success'%>
            </span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
